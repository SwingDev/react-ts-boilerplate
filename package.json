{
  "name": "react-ts-boilerplate",
  "version": "1.0.0",
  "description": "An extensible and highly scalable boilerplate for React with TypeScript",
  "engines": {
    "node": ">=8.11.3"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "classnames": "^2.2.5",
    "ismobilejs": "^0.4.1",
    "lodash": "^4.17.4",
    "normalize.css": "^8.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-router-dom": "4.2.2"
  },
  "scripts": {
    "start": "webpack-dev-server --config ./webpack/webpack.dev.js",
    "start:analyzer": "cross-env ANALYZER=true yarn start",
    "build": "cross-env NODE_ENV=production yarn clean && webpack --config ./webpack/webpack.prod.js --progress -p",
    "test": "jest --maxWorkers=4",
    "test:debug": "jest --verbose --runInBand --no-cache",
    "test:watch": "jest --verbose --watchAll",
    "clean": "rimraf ./dist",
    "lint": "yarn tslint && yarn stylelint",
    "tslint": "tslint --project tsconfig.json --config tslint.json",
    "tslint:fix": "tslint --project tsconfig.json --config tslint.json --fix",
    "stylelint": "stylelint \"src/**/*.scss\"",
    "stylelint:fix": "stylelint \"src/**/*.scss\" --fix",
    "setup": "yarn install && ./node_modules/.bin/plop 'setup' --plopfile internals/plopfile-setup.js",
    "generate": "./node_modules/.bin/plop --plopfile internals/plopfile.js"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/polyfill": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-es2015": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "@babel/preset-stage-0": "^7.0.0-beta.46",
    "@types/classnames": "^2.2.3",
    "@types/enzyme": "^3.1.9",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/faker": "^4.1.2",
    "@types/ismobilejs": "^0.4.1",
    "@types/jest": "^22.0.1",
    "@types/lodash": "^4.14.91",
    "@types/node": "^10.0.3",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.6",
    "@types/react-helmet": "^5.0.3",
    "@types/react-router-dom": "^4.2.4",
    "@types/sinon": "^5.0.0",
    "@types/webpack-env": "^1.13.6",
    "axios-mock-adapter": "^1.14.1",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.0.1",
    "babel-loader": "^8.0.0-beta",
    "chalk": "^2.4.1",
    "circular-dependency-plugin": "^5.0.2",
    "copy-webpack-plugin": "^4.3.0",
    "cross-env": "^5.1.4",
    "css-declaration-sorter": "^3.0.0",
    "css-loader": "^0.28.11",
    "css-mqpacker": "^6.0.1",
    "dotenv-webpack": "^1.5.5",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "faker": "^4.1.0",
    "file-loader": "^1.1.6",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "handlebars-loader": "^1.7.0",
    "html-webpack-plugin": "^3.0.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.0.1",
    "modernizr-webpack-plugin": "^1.0.7",
    "node-sass": "^4.7.2",
    "plop": "^2.0.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.9",
    "protobufjs": "^6.8.6",
    "react-hot-loader": "^4.0.0",
    "react-test-renderer": "^16.2.0",
    "resolve-url-loader": "^2.2.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "sinon": "^5.0.3",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "stylelint": "^9.1.3",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^3.1.0",
    "svgr": "^1.6.0",
    "ts-jest": "^22.0.0",
    "ts-loader": "^4.0.1",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.6.2",
    "typings-for-css-modules-loader": "^1.7.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1",
    "webpack-manifest-plugin": "^2.0.0-rc.2",
    "webpack-merge": "^4.1.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      ".*": "babel-jest"
    },
    "setupFiles": [
      "<rootDir>/testing/setup.js",
      "<rootDir>/testing/browser-mocks.js"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(svg|jpg|png|gif)$": "<rootDir>/testing/empty-module.js",
      "\\.(css|scss)$": "identity-obj-proxy",
      "\\.svg\\?inline$": "<rootDir>/testing/svg-inline-mock.js",
      "^images(.*)$": "<rootDir>/src/images$1",
      "^globals(.*)$": "<rootDir>/src/globals$1",
      "^styles(.*)$": "<rootDir>/src/styles$1",
      "^components(.*)$": "<rootDir>/src/components$1",
      "^views(.*)$": "<rootDir>/src/views$1",
      "^utils(.*)$": "<rootDir>/src/utils$1",
      "^root(.*)$": "<rootDir>/src$1"
    }
  }
}
